@model CategoryViewModel
<div class="row">
    <div class="col-md-12 mx-auto">
        <form asp-action="Delete" asp-controller="Category" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="form-label"></label>
                <input asp-for="CategoryName" class="form-control" disabled="disabled" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Delete" class="btn btn-primary" onclick="return confirm('Do you want to Delete?')" />
                <input type="button" value="Cancel" data-bs-dismiss="modal" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
